@inherits R_Page
@attribute [R_Page(Title = "Department")]

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.DepartmentGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Height="300px"
                Pageable
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CDEPT_CODE" HeaderText="Department Code" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDEPT_NAME" HeaderText="Department Name" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCENTER_CODE" HeaderText="Center Code" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCENTER_NAME" HeaderText="Center Name" Width="300px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>