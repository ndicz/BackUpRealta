@inherits R_Page
@attribute [R_Page(Title = "Supplier Lookup")]
<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_viewModel.SearchText"
                       R_ConductorSource="@_conductorRef"
                       Enabled="true" />
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button OnClick="Search_Button">
                Search
            </R_Button>
        </R_ItemLayout>
        
        <R_ItemLayout>
            <R_Button OnClick="ShowAll_Button">
                Show All
            </R_Button>
        </R_ItemLayout>

    </R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.SupplierGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CSUPPLIER_ID" HeaderText="Supplier ID"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CSUPPLIER_NAME" HeaderText="Suplier Name"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CADDRESS" HeaderText="Address"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCITY_NAME" HeaderText="City"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
            <R_Button Enabled="@(_viewModel.SupplierGrid.Count != 0)"
                OnClick="Button_OnClickOkAsync" >
            OK
        </R_Button>
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_StackLayout>

    </R_StackLayout>