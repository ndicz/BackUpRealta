@inherits R_Page
@attribute [R_Page(Title = "Sales Tax")]

<R_StackLayout Style="width: 800px">
     <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.SalesTaxGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CTAX_ID" HeaderText="Tax Id" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_NAME" HeaderText="Tax Name" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CROUNDING_MODE_DESCR" HeaderText="Rounding Mode" Width="200px"></R_GridTextColumn>
                <R_GridNumericColumn FieldName="IROUNDING" ThousandSeparator="false" HeaderText="Rounding Unit" Width="200px"></R_GridNumericColumn>
                <R_GridTextColumn FieldName="CTAXIN_GLACCOUNT_NO_CTAXIN_GLACCOUNT_NAME" HeaderText="Tax In GL Account No" Width="400px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAXOUT_GLACCOUNT_NO_CTAXOUT_GLACCOUNT_NAME" HeaderText="Tax Out GL Account Name" Width="400px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

<R_StackLayout Row Class="justify-content-end">
        <R_Button OnClick="Button_OnClickOkAsync">
            OK
        </R_Button>
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
</R_StackLayout>

</R_StackLayout>