@inherits R_Page
@attribute [R_Page(Title = "GL Account")]

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.GLAccountList"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5"
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CGLACCOUNT_NO" HeaderText="Account No" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CGLACCOUNT_NAME" HeaderText="Account Name" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CBSIS_DESCR" HeaderText="BS/IS" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDBCR_DESCR" HeaderText="D/C" Width="100px"></R_GridTextColumn>
                <R_GridCheckBoxColumn FieldName="LACTIVE" HeaderText="Active" Width="100px"></R_GridCheckBoxColumn>
                <R_GridCheckBoxColumn FieldName="LCENTER_RESTR" HeaderText="User Restriction" Width="200px"></R_GridCheckBoxColumn>
                <R_GridCheckBoxColumn FieldName="LUSER_RESTR" HeaderText="Center Restriction" Width="200px"></R_GridCheckBoxColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>