@inherits R_Page
@attribute [R_Page(Title = "Cash Flow Group Type")]

<R_StackLayout Row>
    <R_Grid @ref="@GridRef"
            DataSource="_viewModel.CashFlowGrpTypeGrid"
            R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
            Pageable
            PageSize="5">
        <R_GridColumns>
            <R_GridTextColumn FieldName="CCASH_FLOW_GROUP_CODE" HeaderText="Cash Flow Group Id"></R_GridTextColumn>
            <R_GridTextColumn FieldName="CCASH_FLOW_GROUP_NAME" HeaderText="Cash Flow Group Name"></R_GridTextColumn>
            <R_GridTextColumn FieldName="CCASH_FLOW_GROUP_TYPE_DESCR" HeaderText="Cash Flow Group Type"></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-end">
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickOkAsync">
            OK
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
