@inherits R_Page
@attribute [R_Page(Title = "Product Allocation Lookup")]
<R_StackLayout Style="width: 800px">
    @*    <R_StackLayout Row>
        <R_ItemLayout>
            <R_Button OnClick="Search_Button">
                Search
            </R_Button>
        </R_ItemLayout>
        
        <R_ItemLayout>
            <R_Button OnClick="ShowAll_Button">
                Show All
            </R_Button>
        </R_ItemLayout>

    </R_StackLayout>*@

    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.ProductAllocationGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CALLOC_ID" HeaderText="Allocation ID"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CALLOC_NAME" HeaderText="Allocation Name"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDEPT_MODE_NAME" HeaderText="Dept. Mode"></R_GridTextColumn>
                <R_GridTextColumn FieldName="GLACCOUNT" HeaderText="Account No."></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
        <R_Button Enabled="@(_viewModel.ProductAllocationGrid.Count != 0)"
                  OnClick="Button_OnClickOkAsync" >
            OK
        </R_Button>
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_StackLayout>

</R_StackLayout>