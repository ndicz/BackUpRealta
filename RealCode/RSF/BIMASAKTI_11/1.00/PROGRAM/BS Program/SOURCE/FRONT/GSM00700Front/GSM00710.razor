                <R_Popup R_After_Open_Popup="@R_AfterCOpyFromYear" R_Before_Open_Popup="@R_BeforeOpenCopyFromYear">Copy From Year</R_Popup>
            </R_ItemLayout>

            <R_ItemLayout>
                <R_Popup R_After_Open_Popup="@R_AfterBaseAmount" R_Before_Open_Popup="@R_BeforeBaseMount" @ref="BaseAmount">Update Base Amount</R_Popup>
            </R_ItemLayout>

            <R_ItemLayout>
                <R_Popup R_After_Open_Popup="@R_AfterLocalAmount" R_Before_Open_Popup="@R_BeforeLocalMount" @ref="LocalAmount">Update Local Amount </R_Popup>
            </R_ItemLayout>

        </R_StackLayout>


        <R_ConductorGrid @ref="@_conGridGSM00720Ref"
                         R_ViewModel="@GSM00720ViewModel"
                         R_IsHeader="true" />
    </R_TabStripTab>
</R_TabStrip>