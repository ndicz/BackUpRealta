@page "/GSM00710"

@using GSM00700Common.DTO
@inherits R_Page
<R_StackLayout Row="true">

    <R_ItemLayout col="2">
        <R_Label Class="fw-bold">Cash Flow Group</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="1">
        <R_TextBox @bind-value="GSM00710ViewModel.CashFlowGroupCode"
                   R_ConductorSource="@R_conduct" Enabled="false" />
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-value="GSM00710ViewModel.CashFlowGroupName"
                   R_ConductorSource="@R_conduct" Enabled="false" />
    </R_ItemLayout>
</R_StackLayout>

<R_TabStrip OnActiveTabIndexChanged="@ChangeTab">
    <R_TabStripTab Title="Cash Flow">




        <R_StackLayout>
            <R_Grid @ref="@_gridRef00710"
                    DataSource="GSM00710ViewModel.loGridList"
                    Pageable="true"
                    Height="450px"
                    Width="100%"
                    R_ConductorGridSource="@_conGridGSM00710Ref"
                    R_GridType="@R_eGridType.Original"
                    AllowAddNewRow="true"
                    AllowEditRow="true" 
                    AllowDeleteRow="true"
                    R_ServiceGetListRecord="@Grid_R_ServiceGetListCashFlow">
                <R_GridColumns>

                    <R_GridTextColumn Width="125px" FieldName="CSEQUENCE" HeaderText="Display Seq" />
                    <R_GridTextColumn Width="150px" FieldName="CCASH_FLOW_CODE" HeaderText="Cash Flow Code" R_EnableAdd></R_GridTextColumn>
                    <R_GridTextColumn Width="250px" FieldName="CCASH_FLOW_NAME" HeaderText="Cash Flow Name" R_EnableAdd R_EnableEdit></R_GridTextColumn>

                    <R_GridDropDownListColumn Width="160px" Data="@GSM00710ViewModel.loCashFlowType"
                                              FieldName="@nameof(GSM00710DTO.CCASH_FLOW_TYPE)"
                                              ValueField="@nameof(GSM00710CashFlowTypeDTO.CCODE)"
                                              TextField="@nameof(GSM00710CashFlowTypeDTO.CDESCRIPTION)"
                                              HeaderText="Cash Flow Type" R_EnableAdd R_EnableEdit />
                    <R_GridTextColumn Width="150px" FieldName="CUPDATE_BY" HeaderText="Updated By" />
                    <R_GridTextColumn Width="150px" FieldName="DUPDATE_DATE" HeaderText="Updated Date" />
                    <R_GridTextColumn Width="150px" FieldName="CCREATE_BY" HeaderText="Created By" />
                    <R_GridTextColumn Width="150px" FieldName="DCREATE_DATE" HeaderText="Created Date" />

                </R_GridColumns>
            </R_Grid>
            <R_StackLayout Row="true">
                <R_ItemLayout>
                    <R_Button R_Conductor="@_conGridGSM00720Ref" OnClick="@DownloadTemplate">Template</R_Button>
                </R_ItemLayout>
                <R_ItemLayout>
                    <R_Popup R_After_Open_Popup="@R_AfterOpenUpload" R_Before_Open_Popup="@R_BeforeOpenUpload">Upload</R_Popup>
                </R_ItemLayout>

            </R_StackLayout>
        </R_StackLayout>

        <R_ConductorGrid @ref="@_conGridGSM00710Ref"
                         R_ViewModel="@GSM00710ViewModel"
                         R_ServiceGetRecord="@Grid_ServiceGetRecordCashFlow"
                         R_ServiceSave="@Grid_ServiceSaveRecordCashFlow"
                         R_ServiceDelete="@Grid_DeleteRecordCashFlow"
                         @*R_AfterSave="@Grid_AfterSaveCashFlow" *@
                         R_Display="@Grid_R_DisplaytListCashFlowPlan"
                         @* R_Validation="@Grid_ValidationCashFlow" *@
                         @* R_AfterDelete="@Grid_AfterDelete" *@
                         R_IsHeader="true" />
    </R_TabStripTab>
