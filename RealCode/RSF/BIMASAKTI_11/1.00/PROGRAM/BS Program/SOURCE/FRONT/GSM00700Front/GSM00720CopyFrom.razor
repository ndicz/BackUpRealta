@page "/GSM00720CopyFromYear"
@using GSM00700Common.DTO
@using GSM00700FrontResources
@using R_BlazorFrontEnd.Interfaces
@inherits R_Page
@attribute [R_BlazorFrontEnd.Controls.Attributes.R_Page(Title = "Copy From Year")]
@inject R_ILocalizer<Resources_Dummy_Class> _localizer


<R_StackLayout Row="true" Class="mt-2">
    <R_ItemLayout col="2">
        <R_Label Class="fw-bold">From</R_Label>
    </R_ItemLayout>

</R_StackLayout>
<R_StackLayout Row="true">

    <R_ItemLayout col="2">
        <R_RadioGroup Data="@_GSM00720ViewModel.RadioButtonCopyFrom"
                      @bind-Value="@_GSM00720ViewModel.loCopyFromEntity.CFROM_CASH_FLOW_FLAG"
                      ValueField="@nameof(GSM00720CopyFromYearDTO.Code)"
                      TextField="@nameof(GSM00720CopyFromYearDTO.Desc)"
                      R_ConductorSource="@_conductorRef">
        </R_RadioGroup>
    </R_ItemLayout>
    <R_ItemLayout col="5">
        <R_StackLayout Row Class="mb-3">
            <R_ItemLayout><R_Label></R_Label></R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row Class="mb-3">
            <R_ItemLayout col="7">
                <R_TextBox @bind-Value="@_GSM00720ViewModel.loCopyFromEntity.CFROM_CASH_FLOW_CODE"
                           R_ConductorSource="@_conductorRef"
                           Enabled="false" />
            </R_ItemLayout>
            <R_ItemLayout>
                <R_Lookup R_Before_Open_Lookup="@R_BeforeOpenLookUp" R_After_Open_Lookup="R_AfterOpenLookUp" @ref="CashFlow" 
                          Enabled="@(_GSM00720ViewModel.loCopyFromEntity.CFROM_CASH_FLOW_FLAG == "01")"> ...</R_Lookup>
            </R_ItemLayout>
            <R_ItemLayout col="12">
                <R_TextBox @bind-Value="@_GSM00720ViewModel.loCopyFromEntity.CashFlowName"
                           R_ConductorSource="@_conductorRef"
                           Enabled="false" />
            </R_ItemLayout>

        </R_StackLayout>
        
        <R_StackLayout Row>
    
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>
<R_StackLayout Row Class="mb-5">
    <R_ItemLayout col="2">
        <R_Label>@_localizer["YEAR"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_DropDownList Data="@_GSM00720ViewModel.YearComboBox"
                        @bind-Value="@_GSM00720ViewModel.loCopyFromEntity.CFROM_YEAR"
                        ValueField="@nameof(GSM00720YearDTO.CYEAR)"
                        TextField="@nameof(GSM00720YearDTO.CYEAR)"
                        R_ConductorSource="@_conductorRef">
        </R_DropDownList>
    </R_ItemLayout>

</R_StackLayout>



<R_StackLayout>
    <R_ItemLayout col="2">
        <R_Label Class="fw-bold">To</R_Label>
    </R_ItemLayout>
</R_StackLayout>
<R_StackLayout Row Class="mb-3">
    <R_ItemLayout col="2">
        <R_Label>@_localizer["CASH_FLW"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="4">
        <R_TextBox @bind-Value="@_GSM00720ViewModel.CashFlowPlanCode"
                   R_ConductorSource="@_conductorRef"
                   Enabled="false" />
    </R_ItemLayout>

    <R_ItemLayout col="5">
        <R_TextBox @bind-Value="@_GSM00720ViewModel.CashFlowPlanName"
                   R_ConductorSource="@_conductorRef"
                   Enabled="false" />
    </R_ItemLayout>

</R_StackLayout>

<R_StackLayout Row Class="mb-4">
    <R_ItemLayout col="2">
        <R_Label>@_localizer["YEAR"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="4">
        <R_TextBox @bind-Value="@_GSM00720ViewModel.Year"
                       R_ConductorSource="@_conductorRef" Enabled="false" />
        </R_ItemLayout>


</R_StackLayout>

<R_StackLayout Row Class="justify-content-end">
    <R_ItemLayout>
        <R_Button OnClick="Button_OnClickProcessAsync">
            @_localizer["YEAR"]
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button OnClick="Button_OnClickCloseAsync">
           @_localizer["CNCL"]
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
