@using GSM02300Common.DTO
@inherits R_Page
@attribute [R_Page(Title = "Property Type")]

<R_StackLayout>
    <R_Grid @ref="@_gridRef02300"
            DataSource="_GSM02300iewModel.loGridList"
            Pageable="true"
            R_ConductorGridSource="@_conGridGSM02300Ref"
            R_GridType="@R_eGridType.Original"
            AllowAddNewRow="true"
            Width="1080px"
            AllowEditRow="true"
            AllowDeleteRow="true"
            R_ServiceGetListRecord="@Grid_Get_Record_GSM02300">

        <R_GridColumns>


            <R_GridDropDownListColumn 
                Data="@_GSM02300iewModel.loGridListPropertyType"

                                      FieldName="@nameof(GSM02300DTO.CPROPERTY_TYPE_CODE)"
