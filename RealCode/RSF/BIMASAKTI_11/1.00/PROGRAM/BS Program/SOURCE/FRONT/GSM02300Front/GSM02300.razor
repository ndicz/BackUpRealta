            @*<R_GridTextColumn FieldName="CPROPERTY_TYPE_CODE" HeaderText="Property Type Name" R_EnableAdd R_EnableEdit></R_GridTextColumn>*@
            <R_GridTextColumn FieldName="CPROPERTY_TYPE_NAME"
                              
                              HeaderText="Property Type Name" R_EnableAdd R_EnableEdit ></R_GridTextColumn>
          

