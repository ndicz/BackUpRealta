            <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="Last Updated By" />
            <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="Update Date" />

            <R_GridTextColumn FieldName="CCREATE_BY" HeaderText="Create By" />
            <R_GridTextColumn FieldName="DCREATE_DATE" HeaderText="Create Date" />

        </R_GridColumns>
    </R_Grid>

</R_StackLayout>
<R_ConductorGrid @ref="@_conGridGSM02300Ref"
                 R_ViewModel="@_GSM02300iewModel"
                 R_ServiceGetRecord="@Grid_Service_Get_Record_GSM02300"
                 R_ServiceSave="@Grid_SaveGSM02300"
                  R_ServiceDelete="@Grid_DeleteProperty"
