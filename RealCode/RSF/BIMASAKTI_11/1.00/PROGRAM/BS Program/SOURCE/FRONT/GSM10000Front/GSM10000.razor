@page "/GSM10000"
@using GSM10000FrontResources
@using R_BlazorFrontEnd.Interfaces
@inherits R_Page
@attribute [R_Page(Title = "Holiday")]
@inject R_ILocalizer<Resource_Dummy_Class_GSM10000> _localizer

<R_StackLayout>
    
    <R_Grid @ref="@_gridRef10000"
            DataSource="@_viewModel.loGridList"
            Pageable="true"
            R_ConductorGridSource="@_conGridGSM10000Ref"
            R_GridType="@R_eGridType.Original"
            Width="100%"
            Height="550px"
            PageSize="24"
            R_ServiceGetRecord="@Grid_ServiceGetRecordHoliday"
            R_ServiceSave="@Grid_ServiceSaveHoliday"
            R_AfterSave="@Grid_AfterSaveHoliday"
            R_Display="@Grid_R_DisplaytListCashFlow"
            AllowAddNewRow="true"
            AllowEditRow="true"
            AllowDeleteRow="true"
            R_ServiceGetListRecord="@Grid_R_ServiceGetListRecordHoliday">

        <R_GridColumns>
            <R_GridDatePickerColumn FieldName="DHOLIDAY_DATE" HeaderText="@(_localizer["HLDY_DT"])"R_EnableAdd></R_GridDatePickerColumn>
            <R_GridTextColumn FieldName="CHOLIDAY_NAME" HeaderText="@(_localizer["HLDY_NM"])" MaxLength="60" R_EnableAdd R_EnableEdit></R_GridTextColumn>
            <R_GridCheckBoxColumn FieldName="LACTIVE" HeaderText="@(_localizer["ACTV"])"></R_GridCheckBoxColumn>
            <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="@_localizer["UPDT_BY"]"/>
            <R_GridTextColumn FieldName="DCREATE_DATE" HeaderText="@_localizer["UPDT_DT"]"/>
            <R_GridTextColumn FieldName="CCREATE_BY" HeaderText="@_localizer["CRT_BY"]"/>
            <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="@_localizer["CRT_DT"]"/>

        </R_GridColumns>
    </R_Grid>

    <R_ItemLayout xs="1">
        <R_Popup R_Before_Open_Popup="R_Before_Open_Popup_ActivateInactive" R_After_Open_Popup="R_After_Open_Popup_ActivateInactive">@loLabel</R_Popup>
    </R_ItemLayout>
</R_StackLayout>
<R_ConductorGrid @ref="@_conGridGSM10000Ref"
                 @* R_ViewModel="@_viewModel" *@
                 R_IsHeader="true"
                 @* R_Validation="@R_Validation" /> *@/>